<?xml version="1.0" encoding="UTF-8"?>
<form name="budget" title="budget.label" primarykey="ID" storage="local">
	<field name="user" length="20">
		<element name="user" type="hidden" label="user.label" placeholder="user.placeholder"></element>
	</field>
	<field name="title" type="varchar" length="255">
		<element name="title" type="text" label="budget.label" placeholder="budget.placeholder"></element>
	</field>
	<field name="notes" type="text">
		<element name="notes" type="textarea" label="description.label" placeholder="description.placeholder"></element>
	</field>
	<field name="creationTime" length="10">
		<element name="creationTime" type="hidden" label="creationTime.label" placeholder="creationTime.placeholder"></element>
	</field>
	<button name="action" type="submit" value="action.continue"><class>gridPrimaryButton</class></button>
	<button name="cancel" type="button" value="action.dismiss"><class>gridSecondaryButton</class></button>
</form>