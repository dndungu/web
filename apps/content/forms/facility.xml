<?xml version="1.0" encoding="UTF-8"?>
<form name="facility" title="facility.label" primarykey="ID" storage="local">
	<field name="province" type="int" length="5">
		<element name="province" type="select" lookup="province" value="ID" display="title" order="title" label="province.label" placeholder="province.placeholder">
			<class>required</class>
		</element>
	</field>
	<field name="district" type="int" length="5">
		<element name="district" type="select" lookup="district" value="ID" display="title" order="title" label="district.label" placeholder="district.placeholder">
			<class>required</class>
		</element>
	</field>
	<field name="title" type="varchar" length="32">
		<element name="title" type="text" label="facility.label" placeholder="facility.placeholder">
			<class>required</class>
		</element>
	</field>
	<field name="creationTime">
		<element name="creationTime" type="hidden" label="creationTime.label" placeholder="creationTime.placeholder"></element>
	</field>
	<button name="action" type="submit" value="action.continue"><class>gridPrimaryButton</class></button>
	<button name="cancel" type="button" value="action.dismiss"><class>gridSecondaryButton</class></button>
</form>