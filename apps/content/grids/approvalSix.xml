<?xml version="1.0" encoding="UTF-8"?>
<grid name="order" title="order.label" searchable="true" sortable="true" paginatable="true" showColumnBar="true" showFooterBar="true">
	<records>
		<leftjoin>`beneficiary` ON (`order`.`beneficiary` = `beneficiary`.`ID`)</leftjoin>
		<leftjoin>`beneficiaryType` ON (`beneficiary`.`beneficiaryType` = `beneficiaryType`.`ID`)</leftjoin>
		<ordercolumn>`order`.`ID`</ordercolumn>
		<orderdirection>desc</orderdirection>
		<search parameters="1">`ID` = %d OR `firstname` LIKE '%s' OR `middlename` = '%s' OR `lastname` LIKE '%s'</search>
		<filter field="approvalOne" value="Approved"></filter>
		<filter field="approvalTwo" value="Approved"></filter>
		<filter field="approvalThree" value="Approved"></filter>
		<filter field="approvalFour" value="Approved"></filter>
		<filter field="approvalFive" value="Approved"></filter>
	</records>
	<columns primarykey="`order`.`ID`">
		<column name="firstname" field="firstname" title="firstname.label" class="grid2of10 column"></column>
		<column name="middlename" field="middlename" title="middlename.label" class="grid2of10 column"></column>
		<column name="lastname" field="lastname" title="lastname.label" class="grid2of10 column"></column>
		<column name="beneficiaryType" field="`beneficiaryType`.`title`" title="beneficiaryType.label" class="grid2of10 column"></column>
		<column name="approvalSix" field="approvalSix" title="status.label" class="grid1of10 column"></column>
		<column name="amount" field="amount" title="amount.label" class="grid1of10 column"></column>
	</columns>
</grid>