<?xml version="1.0" encoding="UTF-8"?>
<form name="recoverpassword">
    <field name="token" type="varchar" length="32">
        <element name="token" type="text" label="recovertoken.label">
            <class>text-input</class>
        </element>
    </field>
	<field name="login" type="varchar" length="255">
	    <element name="login" type="text" label="login.label">
	        <class>text-input</class>
	    </element>
	</field>
    <field name="password" type="varchar" length="32">
        <element name="password" type="password" label="password.label">
            <class>text-input</class>
        </element>
    </field>
    <field name="passwordconfirm" type="varchar" length="32">
        <element name="passwordconfirm" type="password" label="password.confirm.label">
            <class>text-input</class>
        </element>
    </field>
    <button name="action" type="submit" value="resetpassword">
        <class>button</class>
    </button>
</form>