<?xml version="1.0" encoding="UTF-8"?>
<form name="changepassword">
    <field name="passwordcurrent" type="varchar" length="32">
        <element name="passwordcurrent" type="password" label="password.current.label">
            <class>text-input</class>
        </element>
    </field>
    <field name="password" type="varchar" length="32">
        <element name="password" type="password" label="password.label">
            <class>text-input</class>
        </element>
    </field>
    <field name="passwordconfirm" type="varchar" length="32">
        <element name="passwordconfirm" type="password" label="password.confirm.label">
            <class>text-input</class>
        </element>
    </field>
    <button name="action" type="submit" value="action.changepassword">
        <class>button</class>
    </button>
</form>